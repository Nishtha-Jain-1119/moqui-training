<?xml version="1.0" encoding="UTF-8" ?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-3.xsd">
    <service verb="create" noun="Product">
        <in-parameters>
            <parameter name="productName" required="true" entity-name="mantle.product.Product"/>
            <parameter name="description" required="true" entity-name="mantle.product.Product"/>
            <parameter name="price" entity-name="mantle.product.ProductPrice"/>
            <parameter name="priceUomId" entity-name="mantle.product.ProductPrice"/>
        </in-parameters>
        <out-parameters>
            <parameter name="productId"/>
        </out-parameters>
        <actions>
            <service-call name="create#mantle.product.Product" in-map="context" out-map="context"/>
            <if condition="price &amp;&amp; priceUomId">
                <service-call name="create#mantle.product.ProductPrice" in-map="context" out-map="context"/>
            </if>
            <if condition="price &amp;&amp; !priceUomId">
                <message error="true">priceUomId is needed for product price</message>
            </if>
        </actions>
    </service>
    <service verb="get" noun="Product">
        <in-parameters>
            <parameter name="productId"/>
        </in-parameters>
        <out-parameters>
            <parameter name="productId"/>
            <parameter name="productName"/>
            <parameter name="description"/>
            <parameter name="price"/>
            <parameter name="priceUomId"/>
        </out-parameters>
        <actions>
            <entity-find-one entity-name="mantle.product.Product" value-field="productDetails">
                <field-map field-name="productId" value="${productId}"/>
            </entity-find-one>
            <set field="productName" from="productDetails.productName"/>
            <set field="description" from="productDetails.description"/>
            <entity-find-one entity-name="mantle.product.ProductPrice" value-field="productPriceDetails">
                <field-map field-name="productId" value="${productId}"/>
            </entity-find-one>
            <if condition="productPriceDetails">
                <set field="price" from="productPriceDetails.price"/>
                <set field="priceUomId" from="productPriceDetails.priceUomId"/>
            </if>
            <if condition="!productDetails">
                <message error="true">Product does not exist</message>
            </if>
        </actions>
    </service>
</services>
