<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/service-definition-3.xsd">

        <!-- Example & Related Services -->
    <service verb="create" noun="ExampleOne" displayName="Create an Example" type="entity-auto" allow-remote="true">
        <in-parameters>
            <auto-parameters include="nonpk"/>
            <parameter name="exampleName" required="true"/>
            <parameter name="exampleDate"/>
            <parameter name="examplePrice"><number-decimal/></parameter>
            <parameter name="exampleQuantity"><number-integer/></parameter>
        </in-parameters>
        <out-parameters>
            <auto-parameters include="pk" required="true"/>
        </out-parameters>
    </service>

    <service verb="update" noun="ExampleOne" displayName="Update an Example" allow-remote="true" type="entity-auto">
        <in-parameters>
            <auto-parameters include="pk" required="true"/>
            <auto-parameters include="nonpk"/>
<!--            <parameter name="examplePrice"><number-decimal/></parameter>-->
<!--            <parameter name="exampleQuantity"><number-integer/></parameter>-->
        </in-parameters>
        <out-parameters>
            <auto-parameters include="nonpk"/>
        </out-parameters>
    </service>
</services>